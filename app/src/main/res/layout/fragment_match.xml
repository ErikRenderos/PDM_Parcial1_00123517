<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.MatchFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/small_gap"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/medium_gap"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_scoreHomeTeam"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="50dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_homeTeam"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Equipo 1"
                    android:textColor="#000"
                    android:textAllCaps="true"/>


            <Button
                    android:id="@+id/btn_p1_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_gap"
                    android:text="1"/>

            <Button
                    android:id="@+id/btn_p2_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_gap"
                    android:text="2"/>

            <Button
                    android:id="@+id/btn_p3_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_gap"
                    android:text="3"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/medium_gap"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:textColor="#f48024"
                    android:id="@+id/tv_scoreGuestTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="50dp"/>

            <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_guestTeam"
                    android:text="Equipo 1"
                    android:textColor="#000"
                    android:textAllCaps="true"/>

            <Button
                    android:id="@+id/btn_p1_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_gap"
                    android:text="1"/>

            <Button
                    android:id="@+id/btn_p2_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_gap"
                    android:text="2"/>

            <Button
                    android:id="@+id/btn_p3_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_gap"
                    android:text="3"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp"
            android:gravity="center">



        <Button
                android:id="@+id/btn_resetMatch"
                android:layout_width="60dp"
                android:layout_height="62dp"
                android:background="@drawable/reset"
                android:textColor="#fff"/>

        <Button
                android:id="@+id/btn_endMatch"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:layout_margin="10sp"
                android:layout_height="wrap_content"
                android:background="@color/colorRed"
                android:textColor="#fff"
                android:text="Terminar partido"/>

    </LinearLayout>

</LinearLayout>